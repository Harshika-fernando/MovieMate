<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Movie and Showtime Info -->
    <TextView
        android:id="@+id/movie_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/movie1_poster" />

    <TextView
        android:id="@+id/showtime_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Showtime: 10:00 AM"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Seat Details -->
    <TextView
        android:id="@+id/selected_seats_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Seats: A1, B3"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Total Price -->
    <TextView
        android:id="@+id/total_price_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: $20"
        android:textSize="18sp"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:padding="12dp"/>

    <!-- Confirm and Back Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
