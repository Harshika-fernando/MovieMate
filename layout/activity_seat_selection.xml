<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Movie and Showtime Info -->
    <TextView
        android:id="@+id/movie_showtime_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Name - Showtime"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"/>

    <!-- Seat Map (GridView for seat selection) -->
    <GridView
        android:id="@+id/seat_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:padding="16dp"/>

    <!-- Selected Seats Summary -->
    <TextView
        android:id="@+id/selected_seats_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Seats: None"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Proceed and Back Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
